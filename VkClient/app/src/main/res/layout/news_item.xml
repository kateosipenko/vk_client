<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:padding="@dimen/post_padding"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/user_icon"
        android:layout_width="@dimen/user_img_size"
        android:layout_height="@dimen/user_img_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/small_margin"
        android:layout_height="wrap_content">

        <TextView android:layout_gravity="left"
            android:id="@+id/user_name"
            android:textSize="@dimen/middle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <FrameLayout android:id="@+id/template"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/small_margin"
            android:layout_height="wrap_content" />

    </LinearLayout>
    
</LinearLayout>